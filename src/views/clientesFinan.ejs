<!-- conteudo principal -->

<section id="princ">

   <div class="container-fluid">
    <div class="row">

        <!-- parte da esquerda -->
        <div class="esq col-lg-4 col-md-12 border border-danger">
            <div class="row justify-content-between pt-5 ps-4">
                <div class="col-sm-10 mb-5">
                    <h2>Faça seu cadastro de <br>cliente</h2>
                </div>
                <div class="col-sm-2 mb-5"> 
                    
                </div>
                
            </div>

       <div class="d-flex justify-content-center mt-5">
        <h3 class="mb-5">
          
          Nome: <%= clienteAtual.clienteNome %>
          
         
        </h3>
       </div>
       <div class="d-flex justify-content-center">
        <img id="redondo" src="/assets/person-circle.svg" alt="">
       </div>


 <div class="d-flex justify-content-center my-5">

        
        <a href="/clientes/prev?clienteIndex=<%= clienteIndex %>&dpto=3" class="down btn btn-light px-3">
            <img class="imgd" src="/assets/caret-left-fill.svg" alt="">

        </a>

        <a href="/clientes/editClientes?clienteCPF=<%=clienteAtual.clienteCPF %>&dpto=3" class="down btn btn-light px-5">
            <img class="imgd" src="/assets/pencil-square.svg" alt="">
        </a>
         
         


        <a href="/clientes/deleteClientes?clienteCPF=<%= clienteAtual.clienteCPF %>&dpto=3" class="down btn btn-light  px-5">
            <img class="imgd" src="/assets/trash3.svg" alt="">
        </a>
        <a href="/clientes/next?clienteIndex=<%= clienteIndex %>&dpto=3" class="down btn btn-light px-3">
            <img class="imgd" src="/assets/caret-right-fill.svg" alt="">
        </a>
    
</div> 

           
            
        </div>

        <!-- parte da direita -->
        <div class="dir col-md-12 col-lg-8 border-right border-top border-right border-bottom border-danger">
            <div class="container d-flex justify-content-center mt-5">
                <h2>Insira os dados do cliente aqui:</h2>
            </div>
         <div class="row justify-content-center ">
            <div class="col-md-4 col-sm-12">
              <form action="<%= isEdit ? '/clientes/updateClientes?dpto=3' : '/clientes/addClientes?dpto=3' %>" method="post">
                <% if (isEdit) { %>
                    <input type="hidden" name="clienteCPFaux" value="<%= clienteAtual.clienteCPF %>">
                <% } %>
                
                <div class="mt-5">
                    <label for="cpf" class="form-label">CPF:</label>
                    <input type="text" name="clienteCPF" class="form-control" id="cpf" placeholder="###.###.###-##" aria-describedby="emailHelp" value="<%= isEdit ? clienteAtual.clienteCPF : '' %>" <%= isEdit ? 'readonly' : '' %> >
                </div>
                
                <div class="mt-3">
                    <label for="Nome"  class="form-label">Nome:</label>
                    <input type="text" name="clienteNome" class="form-control" id="nome" placeholder="Digite seu nome" value="<%= isEdit ? clienteAtual.clienteNome : '' %>" aria-describedby="emailHelp">
                </div>
                
                <div class="mt-3">
                    <label for="Endereço" class="form-label">Endereço:</label>
                    <input type="text" name="clienteEnde" class="form-control" id="endereco" placeholder="Digite seu Endereço" value="<%= isEdit ? clienteAtual.clienteEnde : '' %>" aria-describedby="emailHelp">
                </div>
                
                <div class="mt-3">
                  <label for="Endereço" class="form-label">Categoria da CNH:</label>
                  <input type="text" name="clienteCNHCat" class="form-control" id="endereco" placeholder="Insira a categoria da CNH" value="<%= isEdit ? clienteAtual.clienteCNHCat : '' %>" aria-describedby="emailHelp">
              
                </div>
                
        </div>
        <div class="col-md-4 col-sm-12">
            
            <div class="mt-5">
                <label for="data" class="form-label">Data de nascimento:</label>
                <input type="date" name="clienteDataNasc" class="form-control" id="data" placeholder="Insira sua data de nascimento" value="<%= isEdit ? clienteAtual.clienteDataNasc.toISOString().split('T')[0] : '' %>" aria-describedby="emailHelp">
            </div>
            
            <div class="mt-3">
                <label for="tel" class="form-label">Telefone:</label>
                <input type="text" name="clienteTel" class="form-control" id="tel" placeholder="(##)#####-####" value="<%= isEdit ? clienteAtual.clienteTel : '' %>" aria-describedby="emailHelp">
            </div>
            
            <div class="mt-3">
                <label for="cnh" class="form-label">CNH:</label>
                <input type="text" name="clienteCNH" class="form-control" id="cnh" placeholder="Digite sua CNH:" value="<%= isEdit ? clienteAtual.clienteCNH : '' %>" aria-describedby="emailHelp">
            </div>
            
            <div class="mt-3">
                <label for="cidade" class="form-label">Cidade:</label>
                <input type="text" name="clienteCidade" class="form-control" id="cidade" placeholder="Digite sua cidade:" value="<%= isEdit ? clienteAtual.clienteCidade : '' %>" aria-describedby="emailHelp">
            </div>
        </div>
        
        </div>
            <div class="container-sm d-flex justify-content-center mt-3">
                <button type="submit" class="btn btn-dark btn-block rounded border border-danger my-3 mx-2">
                    <%= isEdit ? 'Atualizar' : 'Salvar' %>
                </button>
              
                <a href="/clientes?dpto=3" class="btn btn-dark btn-block rounded border border-danger my-3 mx-2">Cancelar</a>
            </form>
                 


                 </div>
         </div>
    </div>



   </div>








</section>
