<script>
  // Seleciona o botão e o campo de matrícula
  const btnSearch = document.getElementById('btnSearch');
  const campoPlaca = document.querySelector('input[name="campoPlaca"]');

  // Adiciona um evento para atualizar o href do botão
  campoPlaca.addEventListener('input', () => {
      event.preventDefault();
      const placa = campoPlaca.value.trim(); // Captura o valor e remove espaços extras
      btnSearch.href = `/veiculo/buscavei?placa=${encodeURIComponent(placa)}&dpto=5`;
  });
</script>
